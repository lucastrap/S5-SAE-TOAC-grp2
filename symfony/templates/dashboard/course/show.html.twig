{% extends 'layouts/dashboard/base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table mb-5">
        <tbody>
        <tr>
            <th class="w-auto">Id</th>
            <td class="w-auto">{{ course.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ course.titre }}</td>
        </tr>
        <tr>
            <th>Format</th>
            <td>{{ course.format }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ course.prix }}</td>
        </tr>
        <tr>
            <th>Challenge</th>
            <td>{{ course.challenge }}</td>
        </tr>
        </tbody>
    </table>

    <div class="flex space-x-2">
        <a class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-full"
           href="{{ path('app_dashboard_course_index') }}">Retour à la liste</a>
        <a class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded-full"
           href="{{ path('app_dashboard_course_edit', {'id': course.id}) }}">Éditer</a>
        {{ include('dashboard/course/_delete_form.html.twig') }}

    </div>
{% endblock %}
