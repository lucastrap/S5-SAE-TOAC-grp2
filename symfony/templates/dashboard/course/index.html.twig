{% extends 'layouts/dashboard/base.html.twig' %}

{% block title %}Courses{% endblock %}
{% block subtitle %}Gestion des courses{% endblock %}

{% block action %}
    <a class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-2xl" href="{{ path('app_dashboard_course_new') }}">Nouvelle course</a>

{% endblock %}
{% block body %}
    <table class="w-full mb-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Format</th>
                <th>Prix</th>
                <th>Challenge</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.titre }}</td>
                <td>{{ course.format }}</td>
                <td>{{ course.prix }}</td>
                <td>{{ course.challenge }}</td>
                <td>
                    <a class="bg-yellow-500 hover:bg-yellow-700 text-white py-2 px-4 rounded-full" href="{{ path('app_dashboard_course_edit', {'id': course.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="italic">Aucun élément trouvé...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
