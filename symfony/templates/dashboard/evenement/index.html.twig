{% extends 'layouts/dashboard/base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Start</th>
                <th>ToDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.title }}</td>
                <td>{{ evenement.start }}</td>
                <td>{{ evenement.toDate ? evenement.toDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_dashboard_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_dashboard_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dashboard_evenement_new') }}">Create new</a>
{% endblock %}
