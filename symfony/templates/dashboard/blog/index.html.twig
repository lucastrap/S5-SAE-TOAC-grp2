{% extends "layouts/dashboard/base.html.twig" %}

{% block title %}Blog{% endblock %}
{% block subtitle %}Consulter, cr√©er et modifier les publications du site.{% endblock %}

{% block action %}
<a href="{{ path('app_dashboard_blog_new') }}" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-all">Nouvelle publication</a>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href="{{ path('app_dashboard_blog_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_dashboard_blog_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}