{% extends 'layouts/default/empty.html.twig' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="flex h-screen bg-white">
        <div class="w-full max-w-xs m-auto bg-neutral-50 rounded p-5">   
        <form action="{{ path('app_login') }}" method="post">
            <div>
                <label class="text-blue-500" for="username">Nom d'utilisateur</label>
                <input class="w-full" type="text" id="username" name="_username" value="{{ last_username }}">
            </div>
            <div>
                <label class="text-blue-500" for="password">Password</label>
                <input class="w-full"  type="password" id="password" name="_password">
            </div>
            <div>          
                <button class="button-primary" type="submit">Se connecter</button>
            </div>       
        <input type="hidden" name="_target_path" value="/dashboard/blog">
        </form>  
        </div>
    </div>
        {# If you want to control the URL the user is redirected to on success #}
{% endblock %}

